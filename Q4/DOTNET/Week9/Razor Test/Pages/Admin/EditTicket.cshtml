@page
@model Razor_Test.Pages.Admin.EditTicketModel
@{

}

<h1>Edit Ticket</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="tTicket.Ticket_Title">Game Name</label>
        <input asp-for="tTicket.Ticket_Title" type="text" class="form-control" placeholder="Ticket Title" />
        <span asp-validation-for="tTicket.Ticket_Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="tTicket.Category">Reason</label>
        <input asp-for="tTicket.Category" type="text" class="form-control" placeholder="Category" />
        <span asp-validation-for="tTicket.Category" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="tTicket.Ticket_Desc">Explaination Given</label>
        <input asp-for="tTicket.Ticket_Desc" type="text" class="form-control" placeholder="Ticket Description" />
        <span asp-validation-for="tTicket.Ticket_Desc" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="tTicket.Reporting_Email">User's Email'</label>
        <input asp-for="tTicket.Reporting_Email" type="text" class="form-control" placeholder="Reported by Email" />
        <span asp-validation-for="tTicket.Reporting_Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="tTicket.Orig_Date">Date Submitted</label>
        <input asp-for="tTicket.Orig_Date" type="text" class="form-control" />
        <span asp-validation-for="tTicket.Orig_Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="tTicket.Responder_Email">Employee Email</label>
        <input asp-for="tTicket.Responder_Email" type="text" class="form-control" placeholder="Responder's Email" />
        <span asp-validation-for="tTicket.Responder_Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="tTicket.Responder_Notes">Decision on Refund</label>
        <select asp-for="tTicket.Responder_Notes" class="form-control">
            <option value="">-- Select an Option --</option>
            <option value="Refunded">Refunded</option>
            <option value="Rejected">Rejected</option>
        </select>
        <span asp-validation-for="tTicket.Responder_Notes" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="tTicket.Active"></label>
        <select asp-for="tTicket.Active" class="form-control">
            <option value="">-- Select Activity Level --</option>
            <option value="false">Closed</option>
            <option value="true">Active</option>
        </select>
        <span asp-validation-for="tTicket.Active" class="text-danger"></span>
    </div>

    <input asp-for="tTicket.Ticket_ID" type="hidden" class="form-control" />

    <button type="submit" class="btn btn-primary">Update</button>
</form>

<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

@{
    if (Model.tTicket != null && Model.tTicket.Feedback != null)
    {
        <h1>Results</h1>
        <p>@Model.tTicket.Feedback</p>
    }
}
